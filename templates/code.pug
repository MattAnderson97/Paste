{% extends "base.pug" %}

{% block title %} - {{ name }} {% endblock %}
{% block styles %}
<!-- Prism code highlighting -->
link(rel="stylesheet", href="{{ url_for('static', filename='css/prism.css') }}")
{% endblock %}

{% block content %}
h2.name {{ name }}
.code-view
    pre: code(class="language-{{ lang }}")
        {{ code }}
{% endblock %}
{% block scripts_after %}
script(src="{{ url_for('static', filename='js/prism.js') }}")
script.
    Prism.plugins.NormalizeWhitespace.setDefaults({
        'remove-indent': true,
        'left-trim': true,
        'right-trim': true,
        'tabs-to-spaces': 4,
        /*'remove-trailing': true,
        'break-lines': 80,
        'indent': 2,
        'remove-initial-line-feed': false,
        'spaces-to-tabs': 4*/
    });
{% endblock %}